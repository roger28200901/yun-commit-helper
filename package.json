{
  "name": "yun-commit-helper",
  "displayName": "Yun Commit Helper",
  "description": "AI-powered Git commit helper with Traditional Chinese interface",
  "version": "1.0.3",
  "publisher": "yun-team",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/yun-commit-extension.git"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "commit-helper",
          "title": "Commit Helper",
          "icon": "$(git-commit)"
        }
      ]
    },
    "views": {
      "commit-helper": [
        {
          "type": "webview",
          "id": "commit-helper-view",
          "name": "快速 COMMIT"
        }
      ]
    },
    "commands": [
      {
        "command": "commit-helper.commit",
        "title": "Open Commit Helper",
        "category": "Commit Helper"
      },
      {
        "command": "commit-helper.refresh",
        "title": "Refresh File List",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "commit-helper.refresh",
          "when": "view == commit-helper-view",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "commit-helper.commit",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "!inDebugMode"
      }
    ],
    "configuration": {
      "title": "Yun Commit Helper",
      "properties": {
        "yun-commit-helper.ai.provider": {
          "type": "string",
          "enum": [
            "rules",
            "openai",
            "anthropic",
            "gemini",
            "local"
          ],
          "enumDescriptions": [
            "使用內建規則引擎（免費，離線）",
            "使用 OpenAI GPT（需要 API Key）",
            "使用 Anthropic Claude（需要 API Key）",
            "使用 Google Gemini（需要 API Key）",
            "使用本地 AI 服務（如 Ollama）"
          ],
          "default": "rules",
          "description": "AI 內容生成提供者"
        },
        "yun-commit-helper.ai.apiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI、Anthropic 或 Google Gemini API Key（僅在使用相應提供者時需要）"
        },
        "yun-commit-helper.ai.model": {
          "type": "string",
          "default": "",
          "description": "AI 模型名稱（如 gpt-3.5-turbo, claude-3-haiku-20240307, codellama）"
        },
        "yun-commit-helper.ai.endpoint": {
          "type": "string",
          "default": "http://localhost:11434/api/generate",
          "description": "本地 AI 服務端點（僅在使用本地提供者時需要）"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}
